<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/public/css/styles.css" rel="stylesheet" type="text/css">
    
</head>
<body>
    <div>
        <%- include('../partials/adminPageHeader'); %>
        
  <% if(messages.success){%>
    <ul class="alert alert-success text-center">
      <li><%=messages.success%>
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
      </li>
    </ul>
    <% } %>
    <% if(usersinDb!=""){%>
        
        <div class="customers mx-auto " style="width:600px; ">           
        <h1 class="text-center">List of Users</h1>
        <br><br>
    <table class="table  table-sm table-info text-center text-white table-striped table-bordered border-warning">
        <thead class="table table-warning text-center">
            <tr>
                <th>User ID</th>
                <th>User Name</th>
                
            </tr>
        </thead>
        <%   usersinDb.forEach((usersData)=>{ %>
        <tbody>
            
                <tr>
                    <td><%= usersData._id %></td>
                    <td><%= usersData.userName %></td>
                    
                </tr>
                <% }); %>
        </tbody>
    </table>
    
    
    <br><br><br>
    <% } else { %>
        <div class="mt-5 ">
            <h2 class="text-danger bg-white">No Customers yet</h2>
            <video class="nothingGIF mx-auto my-auto d-block" src="https://cdnl.iconscout.com/lottie/premium/preview-watermark/waiting-time-8677631-6981676.mp4" autoplay="autoplay" muted="muted" loop="loop" playsinline="" type="video/mp4" ></video>    
        </div>
    <% } %>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </div>
</body>
</html>
