<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/public/css/styles.css" rel="stylesheet" type="text/css">
    
</head>
<body>
    <div>
        <%- include('../partials/adminPageHeader'); %>
        
  <% if(messages.success){%>
    <ul class="alert alert-success text-center">
      <li><%=messages.success%>
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
      </li>
    </ul>
    <% } %>
    
    <% if (usersWithOrders.length > 0) { %>
        <div class="customers mx-auto " style="width:900px; ">           
        <h1 class="text-center">List of Orders</h1>
        <br><br>
       
            <table class="table  table-sm table-success table-striped table-bordered border-warning">
                <thead class="table table-danger text-center">
                <tr>
                    <th>Order ID</th>
                    <th>Username</th>
                    <th>Product </th>
                    <th>Address</th>
                    <!-- Add additional table headers for other order details if needed -->
                </tr>
            </thead>
            <tbody>
                <% usersWithOrders.forEach(user => { %>
                    <% user.orders.forEach(order => { %>
                        <tr>
                            <td><%= order._id %></td>
                            <td><%= user.userName %></td>
                            <td>
                                <img class="rounded mx-auto d-block" src="<%= order.product.productImage %>" style="height: 250px; width: 180px;"alt="cover">
                                <br><strong class="bg-transparent text-black"><%= order.product.productName %></strong>
                            </td>
                            <td><%= order.address %></td>
                            <!-- Add additional table cells for other order details if needed -->
                        </tr>
                    <% }) %>
                <% }) %>
            </tbody>
        </table>
    
    <br><br><br>
    <% } else { %>
        <div class="mt-5 ">
            <h2 class="text-danger bg-white">No Orders yet</h2>
            <video class="nothingGIF mx-auto my-auto d-block" src="https://cdnl.iconscout.com/lottie/premium/preview-watermark/waiting-time-8677631-6981676.mp4" autoplay="autoplay" muted="muted" loop="loop" playsinline="" type="video/mp4" ></video>    
        </div>
        <% } %>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </div>
</body>
</html>
